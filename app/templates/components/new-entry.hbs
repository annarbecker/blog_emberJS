<h2>New Entry</h2>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date:</label>
      {{input type="date" value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="category">Category:</label>
      {{#each categories as |category|}}
        <label>
        {{input type="checkbox" id=category.id name="category"}}
        {{category.name}}
        </label>
      {{/each}}
    </div>

    <div class="form-group">
      <label for="tagLine">Tagline:</label>
      {{input value=tagLine id="tagLine"}}
    </div>

    <div class="form-group">
      <label for="body">Entry:</label>
      {{textarea value=body id="body"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
</div>
